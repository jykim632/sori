{
  "name": "@sori/core",
  "version": "0.0.1",
  "description": "Lightweight feedback widget - zero dependencies",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./cdn": {
      "import": "./dist/cdn.js",
      "types": "./dist/cdn.d.ts"
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@sori/tsconfig": "workspace:*",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2"
  },
  "keywords": ["feedback", "widget", "lightweight", "vanilla-js"],
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/sori"
  }
}
